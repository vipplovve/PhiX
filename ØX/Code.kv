<Password>:
    name: 'Pass'
    Image:
        source: 'BG1.jpg'
    BoxLayout:
        orientation: 'vertical'
        spacing: 25
        padding: 25

        GridLayout:
            cols:1
            size: root.width, root.height
            Label:
                text: 'Welcome To ØX'
                font_size:48
                font_name:'Lhandw'

            Label:
                text: 'By Viplove Tyagi'
                font_size:18
                font_name:'Lhandw'

        GridLayout:
            cols:2

            Label:
                text: 'Enter Your Name: '
                font_size: 30
                font_name:'Lhandw'

            TextInput:
                multiline: False
                id: name
                font_name:'Lhandw'
                halign: 'center'
                valign: 'middle'
                multiline: 'true'
                font_size: 30

            Label:

                text: 'Enter Your Password: '
                font_size: 30
                font_name:'Lhandw'

            TextInput:
                multiline: False
                id: passw
                halign: 'center'
                valign: 'middle'
                multiline: 'true'
                font_name:'Lhandw'
                font_size: 30

        Button:
            size_hint:(1,.4)
            text: 'Submit'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            font_size: 30
            background_color: (157/255,157/255,167/255,1)
            on_release:
                root.check(name,passw)
                app.root.current= 'Menu'
                app.root.transition.direction='left'

        Button:
            size_hint: (1,.4)
            text: 'Quit'
            size_hint:(.4,.4)
            pos_hint: {'center_x':.5, 'center_y': .5}
            background_color: (157/255,157/255,167/255,1)
            font_size: 30
            on_release: root.bye()

<Menu>:
